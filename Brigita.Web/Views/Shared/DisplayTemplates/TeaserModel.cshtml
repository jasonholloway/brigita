@using Brigita.Queries.Teasers
@model TeaserModel
<div class="teaser">    
    <a href="@Url.MvcLink(Model.Link)">
        <h3>@Model.Name</h3>
        <span class="teaserPrice">@Html.Currency(Model.Price)</span>
        @if(Model.Picture != null && !string.IsNullOrWhiteSpace(Model.Picture.Url)) {
            <img src="@Url.Content(Model.Picture.Url)" />
        }
    </a>
</div>